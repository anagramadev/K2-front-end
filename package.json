{
  "scripts": {
    "production:css-app": "tailwindcss -i ./src/css/main.css -o ./public/css/style.css --postcss --minify",
    "production:js": "webpack --config webpack.config.js",
    "build": "npm run production:css-app && npm run production:js",
    "start": "concurrently \"npm run serve\" \"npm run dev\"",
    "watch:css-app": "tailwindcss -i ./src/css/main.css -o ./public/css/style.css --postcss --watch",
    "watch:js": "webpack --config webpack.config.js  --env development",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run watch:css-app\" \"npm run watch:js\"",
    "serve": "serve public -l 8081"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.6",
    "postcss-import": "^14.0.2",
    "serve": "^13.0.2",
    "svg-inline-loader": "^0.8.2",
    "tailwindcss": "^3.0.18",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@47nordmedia/k2-systems-ui-library": "^0.4.5",
    "@tailwindcss/forms": "^0.4.0",
    "postcss-cli": "^9.1.0",
    "smoothscroll-polyfill": "^0.4.4"
  }
}
